{
  "compilerOptions": {
    "baseUrl": "./src",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es2017",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "paths": {
      "@/*":           ["*"],
      "@assets/*":     ["assets/*"],
      "@images/*":     ["assets/images/*"],
      "@scss/*":       ["assets/scss/*"],
      "@constants/*":  ["constants/*"],
      "@components/*": ["components/*"],
      "@utils/*":      ["utils/*"],
      "@helpers/*":    ["helpers/*"],
      "@store/*": 		 ["store/*"],
      "@models/*": 		 ["models/*"],
      "@mocks/*": 		 ["__mocks__/*"],
    },
  },
  "include": ["./src/**/*", "./configs/webpack/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "**/*/*.test.ts",
  ]
}